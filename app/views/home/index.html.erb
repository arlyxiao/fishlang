<script type="text/x-handlebars">
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="#">Bloggr</a>
      <ul class="nav">
        <li>{{#linkTo 'sentences'}}sentences{{/linkTo}}</li>
      </ul>

    </div>
  </div>
  {{outlet}}
</script>

<script type="text/x-handlebars" id="sentences">

  <div class='container-fluid'>
    <div class='row-fluid'>
      <div class='span3'>
        <table class='table'>
          
          {{#each sentence in filteredContent}}
          <tr>
            <td>
              {{#linkTo sentence sentence}} {{sentence.subject}} {{/linkTo}}
            </td>
          </tr>
          {{/each}}
        </table>
      </div>

    </div>
  </div>

  <div class="span9">
    {{outlet}}
  </div>
</script>


<script type="text/x-handlebars" id="sentence">
  {{subject}}
  <p><input type="text" name="subject" id="subject" class='translation_box' /></p>
  <button {{action 'check'}} id='check_btn' class='btn'>Check</button>
  <button {{action 'continue'}} id='continue_btn' class='btn' disabled="disabled">Continue</button>

</script>






