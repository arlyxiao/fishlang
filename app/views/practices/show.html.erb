<%= render 'lessons/menus', :lessons => @lessons %>

<div class="row">
  <div class="row-fluid">
    <div class="span8" style="margin: 20px 0px 20px 9px;">
      <h4><%= @practice.lesson.category.name %> / 
          <%= @practice.lesson.name %> / <%= @practice.name %></h4>
    </div>

    <div class="span8">
      <button class="btn btn-primary" type="button" onclick="javascript: window.location.reload(); window.location.href = '/practices/exam/#/sentences/<%= current_user.get_practice_sentences(@practice).first.id %>'">Start Exercise</button>
    </div>

    <div class="span8" style="margin: 20px 0px 0px 9px;">
      <% @practice.sentences.each do |s| %>
        <p style="margin-left:20px; padding: 5px;"><%= s.verb %></p>
      <% end %>
    </div>

  </div>
</div>