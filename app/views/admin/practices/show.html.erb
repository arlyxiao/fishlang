<%= render 'admin/lessons/menus', :lessons => @lessons %>

<div class="span8">
  <h4><%= @practice.lesson.name %> / <%= @practice.name %></h4>
  <div class="well form-actions">
    <p>Create Sentence</p>
    <%= simple_form_for Sentence.new, :url => "/admin/practices/#{@practice.id}/sentences" do |f| %>
      <div class="form-inputs">
        <%= f.input :verb, :input_html => { :class => "span3" } %>
        <%= f.input :subject, :input_html => { :class => "span7" } %>
      </div>

      <%= f.button :submit, :value => 'Save' %>
    <% end %>
  </div>


  <div class="row-fluid">
    <h4>Sentences</h4>
    <% @practice.sentences.each do |p| %>
      <span class="span5"><%= p.subject %></span>
      <span class="span2">
        <%= link_to 'X', "/admin/sentences/#{p.id}", :method => :delete, :confirm => "Remove '#{p.subject}' ?" %>
      </span>
    <% end %>
  </div>

  

</div>