<%= render 'menus', :lessons => @lessons %>

<div class="span8">
  <h4><%= @lesson.name %></h4>
  <div class="well form-actions">
    <p>Create Practice</p>
    <%= simple_form_for Practice.new, :url => "/admin/lessons/#{@lesson.id}/practices" do |f| %>
      <div class="form-inputs">
        <%= f.input :name, :input_html => { :class => "span5" } %>
      </div>

      <%= f.button :submit, :value => 'Save' %>
    <% end %>
  </div>


  <div class="row-fluid">
    <h4>Practices</h4>
    <% @lesson.practices.each do |p| %>
      <span class="span5"><%= link_to p.name, "/admin/practices/#{p.id}" %></span>
      <span class="span2">
        <%= link_to 'X', "/admin/practices/#{p.id}", :method => :delete, :confirm => "Remove #{p.name}?" %>
      </span>
    <% end %>
  </div>

  

</div>